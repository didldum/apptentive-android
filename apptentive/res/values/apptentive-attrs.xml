<resources>

    <declare-styleable name="ApptentiveMaterial">
        <attr name="apptentive_material_background" format="color|reference" />

        <attr name="apptentive_material_toolbar_foreground" format="color|reference" />
        <attr name="apptentive_material_primary_text" format="color|reference" />
        <attr name="apptentive_material_primary_icon" format="color|reference" />
        <attr name="apptentive_material_secondary_text" format="color|reference" />
        <attr name="apptentive_material_hint_text" format="color|reference" />
        <attr name="apptentive_material_disabled_text" format="color|reference" />
        <attr name="apptentive_material_disabled_icon" format="color|reference" />
        <attr name="apptentive_material_divider" format="color|reference" />

        <attr name="apptentive_material_selected" format="color|reference" />
        <attr name="apptentive_material_selected_text" format="color|reference" />
        <!-- header attrs-->
        <attr name="apptentive_material_header_selection_text" format="color|reference" />
        <attr name="apptentive_material_pressed_highlight" format="color|reference" />
    </declare-styleable>



    <attr name="apptentiveAvatarViewGreetingStyle" format="reference"/>
    <attr name="apptentiveAvatarViewMessageStyle" format="reference"/>

    <declare-styleable name="ApptentiveDialogButton">
        <attr name="apptentive_buttonText" format="string"/>
    </declare-styleable>

    <declare-styleable name="ApptentiveMaterialDeterminateProgressBar">
        <attr name="apptentive_backgroundColor" format="color"/>
        <attr name="apptentive_progressBarColor" format="color"/>
        <attr name="apptentive_progress" format="integer"/>
    </declare-styleable>


    <!-- Default style attribute which will be used during construction of ApptentiveMessageCenterBadge. -->
    <attr name="apptentiveMessageCenterBadgeStyle" format="reference"/>

    <declare-styleable name="ApptentiveMessageCenterBadge">
        <!-- counter color -->
        <attr name="apptentive_counterColor" format="color|reference"/>
        <!-- Size of action button -->
        <attr name="apptentive_badgeSize" format="enum">
            <!-- 56dp -->
            <enum name="normal" value="0"/>
            <!-- 40dp -->
            <enum name="mini" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="apptentiveFabStyle" format="reference"/>
    <attr name="apptentiveAvatarStyle" format="reference"/>

    <declare-styleable name="FloatingActionButton">
        <!-- Background color -->
        <attr name="apptentive_floatingActionButtonColor" format="color|reference"/>
        <!-- Size of action button -->
        <attr name="apptentive_floatingActionButtonSize" format="enum">
            <!-- 56dp -->
            <enum name="normal" value="0"/>
            <!-- 40dp -->
            <enum name="mini" value="1"/>
        </attr>
        <!-- Elevation will be configured for API level 21 according to this attribute. Default value is true. -->
        <attr name="apptentive_floatingActionButtonImplicitElevation" format="boolean"/>
        <!-- Show shadow or not, default value is true -->
        <attr name="apptentive_floatingActionButtonShadow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ApptentiveAvatarView">
        <attr name="apptentive_borderWidth" format="dimension"/>
        <attr name="apptentive_borderSpace" format="dimension"/>
        <attr name="apptentive_borderColor" format="color"/>
    </declare-styleable>
</resources>