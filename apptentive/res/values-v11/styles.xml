<resources>
    <!-- Add overridden Dialog design to base themes -->
    <style name="ApptentiveBaseTheme" parent="ApptentiveBaseVersionBaseTheme.Light">
        <item name="android:dialogTheme">@style/ApptentiveBaseTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/ApptentiveBaseTheme.AlertDialog</item>
    </style>

    <style name="ApptentiveBaseTheme.Dark" parent="ApptentiveBaseVersionBaseTheme.Dark">
        <item name="android:dialogTheme">@style/ApptentiveBaseTheme.Dark.Dialog</item>
        <item name="android:alertDialogTheme">@style/ApptentiveBaseTheme.Dark.AlertDialog</item>
    </style>

    <!-- General Theme override to change the Dialog design -->
    <style name="ApptentiveBaseTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/apptentive_material_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_material_primary_dark</item>
        <item name="colorAccent">@color/apptentive_material_accent</item>
    </style>

    <style name="ApptentiveBaseTheme.AlertDialog" parent="ApptentiveBaseTheme.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="ApptentiveBaseTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/apptentive_material_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_material_primary_dark</item>
        <item name="colorAccent">@color/apptentive_material_accent</item>
    </style>

    <style name="ApptentiveBaseTheme.Dark.AlertDialog" parent="ApptentiveBaseTheme.Dark.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
</resources>