<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="?attr/apptentive_material_background"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:paddingBottom="48dp"
                  android:paddingTop="10dp">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/apptentive_message_center_status_side_padding"
                      android:paddingRight="@dimen/apptentive_message_center_status_side_padding"
                      android:gravity="center"
                      android:orientation="@integer/apptentive_message_center_status_orientation">
            <ImageView android:id="@+id/icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="12dp"
                       android:paddingBottom="12dp"
                       android:paddingRight="16dp"
                       android:paddingLeft="16dp"
                android:scaleType="center"/>
            <TextView android:id="@+id/body"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="@integer/apptentive_message_center_status_text_gravity"
                      android:textColor="?attr/apptentive_material_hint_text"
                      android:textSize="16sp"
                      android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>